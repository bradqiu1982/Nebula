<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    @if (Session["utheme"] == null || Convert.ToInt32(Session["utheme"]) == Nebula.Models.Theme.Dark)
    {
        <link href="~/Content/common.css" rel="stylesheet" />
    }
    else
    {
        <link href="~/Content/lcommon.css" rel="stylesheet" />
    }
    <link href="~/Content/simplebar.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.2.1.min.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Scripts/theme.js" type="text/javascript"></script>

</head>
<body>
    <header>
        <span class="col-xs-3 logo"></span>
        <div class="user-info">
            <span class="header-user">@ViewBag.UserName</span>
            <span class="logout glyphicon glyphicon-log-out" aria-hidden="true" title="Logout"></span>
        </div>
    </header>
    @RenderBody()
    <div class="theme-setting">
        <span class="span-theme-setting">Change Theme</span>
    </div>
    <script>
        $(function () {
            Theme.init();
        })
    </script>
</body>
</html>