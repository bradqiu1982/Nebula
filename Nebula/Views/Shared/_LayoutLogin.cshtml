<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=8,IE=9,IE=10,IE=Edge" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
        @if (Session["utheme"] == null || Convert.ToInt32(Session["utheme"]) == Nebula.Models.Theme.Light)
        {
            <link href="~/Content/lcommon.css" rel="stylesheet" />
        }
        else
        {
            <link href="~/Content/common.css" rel="stylesheet" />
    }
    <link href="~/Content/simplebar.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.2.1.min.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Scripts/theme.js" type="text/javascript"></script>

</head>
@{
    var isvideook = true;
    var ua = Request.UserAgent;
    if (ua.IndexOf("MSIE ") > 0)
    { isvideook = false; }
    if (ua.IndexOf("Edge/") > 0 || ua.IndexOf("Trident/") > 0)
    { isvideook = true; }
}
<body>
    <script type="text/javascript">
    $(function () {
        $('[data-toggle="popover"]').popover({ html: true, placement: 'bottom' });
        $('[data-toggle="popover"]').popover('show');
    })
    </script>

    <div class="login-theme-setting">
        @if (isvideook)
        {
            @*<a tabindex="0" class="btn" role="button" data-toggle="popover" data-container="body" placement="bottom" title="BR Trace Introduce" data-content="<video src='/Content/BRTraceIntroduce.mp4' width='200' height='160' controls type='video/mp4'></video>">
                <span class="glyphicon glyphicon-question-sign brtracehelp"></span>
            </a>*@
        }
        <span class="span-theme-setting">Change Theme</span>
    </div>
    @RenderBody()
    <script>
        $(function () {
            Theme.init();
        })
    </script>
</body>
</html>