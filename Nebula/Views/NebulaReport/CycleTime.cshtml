
@{
    ViewBag.Title = "CycleTime";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">&nbsp;</div>
</div>

<div class="row">
    <div class="col-lg-12">&nbsp;</div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="row">
            <ol class="breadcrumb" style="font-size:18px">
                <li><a data-toggle="tooltip" title="Goto ViewAll" href="/Domino/MiniPIP/ViewAll">Working MiniPIP</a></li>
                <li class="active">CycleTime</li>
            </ol>
        </div>
    </div>
</div>

<hr />

@using (Html.BeginForm("CycleTime", "DominoReport", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-lg-12">
                <div class="col-lg-6">
                    <div class="col-lg-3">
                        <label class="control-label" for="StartDate">StartDate</label>
                    </div>
                    <div class="col-lg-9">
                        <input class="form-control text-box single-line" id="StartDate" name="StartDate" type="text" value="" />
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="col-lg-3">
                        <label class="control-label" for="EndDate">EndDate</label>
                    </div>
                    <div class="col-lg-9">
                        <input class="form-control text-box single-line" id="EndDate" name="EndDate" type="text" value="" />
                    </div>
                </div>
                <script type="text/javascript">
                $(document).ready(function () {
                    $("#StartDate").datepicker({
                        changeMonth: true,
                        changeYear: true,
                        dateFormat: 'yy-mm-dd'
                    });
                    $("#EndDate").datepicker({
                        changeMonth: true,
                        changeYear: true,
                        dateFormat: 'yy-mm-dd'
                    });
                });
                </script>
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-12">
                <div class="col-lg-6">
                    <div class="col-lg-3"><label class="control-label" for="charttypelist">Chart Type</label></div>
                    
                    <div class="col-lg-9">
                            @Html.DropDownList("charttypelist", null, new { @id = "charttypelist", @class = "form-control" })
                        </div>
                </div>
                <div class="col-lg-6">
                    <div class="col-lg-3">
                        <label class="control-label" for="ChartTitle">Chart Title (optional)</label>
                    </div>
                    <div class="col-lg-9">
                        <input class="form-control text-box single-line" id="ChartTitle" name="ChartTitle" type="text" value="" />
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-12">
                <div class="col-lg-3">
                    <input type="submit" value="Submit" class="btn btn-default" />
                </div>
                <div class="col-lg-9">
                </div>
            </div>
        </div>

        <hr />

        @if (ViewBag.cycletimechart != null)
        {
            @Html.Raw(ViewBag.cycletimechart)

            <script src="~/Scripts/highcharts.js"></script>
            <script src="~/Scripts/exporting.js"></script>

            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">CycleTime</h3>
                        </div>
                        <div class="panel-body">
                            <div class="col-lg-12">
                                <div id="cycletimechart" style="min-width: 310px; height: 400px; margin: 0 auto"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        
        @if (ViewBag.cycleurl != null)
        {
            <hr />
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">CycleTime Data</h3>
                        </div>
                        <div class="panel-body">
                            <div class="col-lg-1"></div>
                            <div class="col-lg-10">
                                <a href="@ViewBag.cycleurl" target="_blank">CycleTime Data File</a>
                            </div>
                            <div class="col-lg-1"></div>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
}