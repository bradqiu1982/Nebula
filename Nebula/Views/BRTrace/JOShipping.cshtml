@model IEnumerable<Nebula.Models.JOShipTrace>

@{
    ViewBag.Title = "JOShipping";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="@Url.Content("~/Content/jquery.dataTables.min.css")" rel="stylesheet" type="text/css" />
<script src="~/Scripts/jquery.dataTables.min.js" type="text/javascript"></script>

<style type="text/css">
    label {
        color: #fff;
    }

    .dataTables_info {
        color: #fff !important;
    }

    tr {
        background-color: #001d2e !important;
    }

    .dataTables_filter input {
        color: #000 !important;
    }

    .dataTables_length select {
        color: #000 !important;
    }

    .dataTables_wrapper .dataTables_paginate .paginate_button {
        color: #fff !important;
    }
</style>

<div class="content">
    <div class="container">
        <div style="color: #fff; margin-top: 2%; margin-right: 10%; margin-left: 10%;">
            @if (Model != null && Model.Count() > 0)
            {
                <div style="color: #fff;text-align: center;margin-bottom: 4%;">
                    <h3>@Model.ElementAt(0).JO Shipping</h3>
                </div>
                <table id="pndatatable" class="table table-bordered" cellspacing="0">
                    <thead>
                        <tr>
                            <th>JO</th>
                            <th>Trace Num</th>
                            <th>SO Num</th>
                            <th>Order QTY</th>
                            <th>Shipped QTY</th>
                            <th>Ship Date</th>
                            <th>Lot Num</th>
                            <th>Cust PO</th>
                            <th>Ship Cust</th>
                            <th>Real Cust</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.JO</td>
                                <td>@item.TraceNum</td>
                                <td>@item.SONum</td>
                                <td>@item.OrderQTY</td>
                                <td>@item.ShippedQTY</td>
                                <td>@item.ShipDate</td>
                                <td>@item.DateCode</td>
                                <td>@item.CustPO</td>
                                 <td>@item.ShipCust</td>
                                <td>@item.RealCust</td>
                            </tr>
                        }
                    </tbody>
                </table>

                <script type="text/javascript">
                    $(document).ready(function() {
                        $('#pndatatable').DataTable({
                            'iDisplayLength': 10,
                            'aLengthMenu': [[10, 20, 30, -1],
                                            [10, 20, 30, "All"]],
                            "bAutoWidth": false,
                            "aaSorting": [],
                            "order": false
                        });
                    });
                </script>
            }
        </div>
    </div>
</div>
<footer>
    <span class="col-xs-5"></span>
</footer>


