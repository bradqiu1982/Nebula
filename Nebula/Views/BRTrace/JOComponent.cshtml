@model IEnumerable<Nebula.Models.JOComponentInfo>

@{
    ViewBag.Title = "JOComponent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="@Url.Content("~/Content/jquery.dataTables.min.css")" rel="stylesheet" type="text/css" />
<script src="~/Scripts/jquery.dataTables.min.js" type="text/javascript"></script>

<style type="text/css">
    label {
        color:white;
    }
    .dataTables_info {
        color:white!important;
    }
    tr {
           border-color:white!important;
           border-width:3px!important;
           background-color:#001d2e!important;
    }
</style>

<div class="content">
    <div class="container">
        <div style="color: white; margin-top: 10%; margin-right: 10%; margin-left: 10%;">
            @if (Model != null && Model.Count() > 0)
            {
                <table id="pndatatable" class="display" cellspacing="0" >
                    <caption style="color: white">@Model.ElementAt(0).JONumber</caption>
                    <thead>
                        <tr>
                            <th>PN</th>
                            <th>PN Desc</th>
                            <th>Reqd</th>
                            <th>Item Cost</th>
                            <th>QTY Issued</th>
                            <th>QTY Open</th>
                            <th>Cost Sum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.MPN</th>
                                <th>@item.MPNDesc</th>
                                <th>@item.ReqdSum</th>
                                <th>@item.ItemCost</th>
                                <th>@item.QtyIssuedSum</th>
                                <th>@item.QtyOpen</th>
                                <th>@item.CostSum</th>
                            </tr>
                        }
                    </tbody>
                </table>

                <script type="text/javascript">
                    $(document).ready(function() {
                        $('#pndatatable').DataTable({
                            'iDisplayLength': 10,
                            'aLengthMenu': [[10, 20, 30, -1],
                                            [10, 20, 30, "All"]],
                            "bAutoWidth": false,
                            "aaSorting": [],
                            "order": []
                        });
                    });
                </script>
            }
        </div>
    </div>
</div>
<footer>
    <span class="col-md-5"></span>
</footer>
