@model IEnumerable<Nebula.Models.JOComponentInfo>

@{
    ViewBag.Title = "JOComponent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="@Url.Content("~/Content/jquery.dataTables.min.css")" rel="stylesheet" type="text/css" />
<script src="~/Scripts/jquery.dataTables.min.js" type="text/javascript"></script>

<style type="text/css">
    label {
        color: #fff;
    }
    .dataTables_info {
        color: #fff !important;
    }
    tr{
        background-color: #001d2e !important;
    }
    .dataTables_filter input {
        color: #000 !important;
    }
    .dataTables_length select {
        color: #000 !important;
    }
    .dataTables_wrapper .dataTables_paginate .paginate_button{
        color: #fff !important;
    }
</style>

<div class="content">
    <div class="container">
        <div style="color: #fff; margin-top: 2%; margin-right: 10%; margin-left: 10%;">
            @if (Model != null && Model.Count() > 0)
            {
                <div style="color: #fff;text-align: center;margin-bottom: 4%;">
                    <h3>@Model.ElementAt(0).JONumber</h3>
                </div>
                <table id="pndatatable" class="table table-bordered" cellspacing="0" >
                    <thead>
                        <tr>
                            <th>PN</th>
                            <th>PN Desc</th>
                            <th>Reqd</th>
                            <th>Item Cost</th>
                            <th>QTY Issued</th>
                            <th>QTY Open</th>
                            <th>Cost Sum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.MPN</td>
                                <td>@item.MPNDesc</td>
                                <td>@item.ReqdSum</td>
                                <td>@item.ItemCost</td>
                                <td>@item.QtyIssuedSum</td>
                                <td>@item.QtyOpen</td>
                                <td>@item.CostSum</td>
                            </tr>
                        }
                    </tbody>
                </table>

                <script type="text/javascript">
                    $(document).ready(function() {
                        $('#pndatatable').DataTable({
                            'iDisplayLength': 10,
                            'aLengthMenu': [[10, 20, 30, -1],
                                            [10, 20, 30, "All"]],
                            "bAutoWidth": false,
                            "aaSorting": [],
                            "order": false
                        });
                    });
                </script>
            }
        </div>
    </div>
</div>
<footer>
    <span class="col-md-5"></span>
</footer>
