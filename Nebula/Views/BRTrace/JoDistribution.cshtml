                type: 'category',
                labels: {
                    rotation: -45,
                    style: {
                        fontSize: '13px',
                        fontFamily: 'Verdana, sans-serif'
                    }
                }
            },
            yAxis: {
                min: 0,
                title: {
                    text: 'Module Amount'
                }
            },
            legend: {
                enabled: false
            },
            tooltip: {
                pointFormat: 'Module: <b>{point.y}</b>'
            },
            plotOptions: {
                series: {
                    colorByPoint: true
                }
            },
            series: [{
                name: 'Module',
                //data: [
