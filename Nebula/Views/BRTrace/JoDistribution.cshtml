
@{
    ViewBag.Title = "JoDistribution";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>JoDistribution</h2>

<script src="~/Scripts/highcharts.js"></script>
<script src="~/Scripts/exporting.js"></script>


<div class="row">
    <div id="jodistribute" style="width:80%; height: 400px; margin: 0 auto"></div>
</div>

<script type="text/javascript">
    $(function(){
        var mychart = new Highcharts.chart('jodistribute', {
            chart: {
                type: 'column'
            },
            title: {
                text: 'JO Distribution'
            },
