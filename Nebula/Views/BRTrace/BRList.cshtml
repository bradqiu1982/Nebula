@model IEnumerable<Nebula.Models.BRAgileBaseInfo>

@{
    ViewBag.Title = "BR List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/br.js" type="text/javascript"></script>

<script type="text/javascript">
    $(function(){
        BR.brlist();
    })
</script>

<div class="content">
    <div class="container">
        <div class="row row-search">
            <span class="search"></span>
            <div class="input-group search-div hide">
                <input type="text" class="search-input" id="keywords" placeholder="Search for..." value="@ViewBag.searchkeyword">
                <span class="input-group-btn search-icon"></span>
            </div>
        </div>
        <div class="nav-type">
            <div class="nav-link-o">
                <span class="nav-link-a" id="brkickoffnav">KickOff</span>
                <span class="nav-frasl">&frasl;</span>
                <span class="nav-link-a" id="brnav">Open</span>
                <span class="nav-frasl">&frasl;</span>
                <span class="nav-link-a" id="brclosenav">Closed</span>
                <span class="nav-label">BR</span>
            </div>
            <div class="nav-link-j">
                <span class="nav-link-a" id="jonav">Open</span>
                <span class="nav-frasl">&frasl;</span>
                <span class="nav-link-a" id="joclosenav">Closed</span>
                <span class="nav-label">JO</span>
            </div>
            <div class="nav-line-l"></div>
        </div>
        <div class="br-list">
            <div class="content-title">
                BR List
            </div>
            <div class="row">
                <div class="col-xs-4 col-xs-offset-1 br-list-left">
                    <table class="table table-bordered table-hover cus-table">
                        @foreach (var item in ViewBag.brlist)
                        {
                            <tr><td>@item.BRNumber</td><td>@item.BRStatus</td></tr>
                        }
                    </table>
                    @if (ViewBag.total_pages > 1)
                    {
                        @Html.Partial("~/Views/Shared/_pagination.cshtml")
                    }
                </div>
                <div class="col-xs-5 col-xs-offset-1 br-list-right">
                    <table class="table table-bordered des-table">
                        <tr>
                            <td class="col-xs-4">Project</td>
                            <td id="br_pjkey">Test1</td>
                        </tr>
                        <tr>
                            <td class="col-xs-4">Originator</td>
                            <td id="br_orignator">Test1</td>
                        </tr>
                        <tr>
                            <td class="col-xs-4">Original Date</td>
                            <td id="br_date">Test1</td>
                        </tr>
                        <tr>
                            <td class="col-xs-4">Description</td>
                            <td id="br_desc">Test1</td>
                        </tr>
                        <tr>
                            <td class="col-xs-4">Status</td>
                            <td id="br_stat">Test1</td>
                        </tr>
                        <tr>
                            <td class="col-xs-4">Start QTY</td>
                            <td id="br_sqty">Test1</td>
                        </tr>
                        <tr>
                            <td class="col-xs-4">Total Cost</td>
                            <td id="br_tcost">Test1</td>
                        </tr>
                        <tr>
                            <td class="col-xs-4">Scrap QTY</td>
                            <td id="br_scrap">Test1</td>
                        </tr>
                        <tr>
                            <td class="col-xs-4">Sale Revenue</td>
                            <td id="br_revenue">Test1</td>
                        </tr>
                        <tr>
                            <td class="col-xs-4">Product Phase</td>
                            <td id="br_phase">Test1</td>
                        </tr>
                        <tr>
                            <td class="col-xs-4"><a id="br_detail" href="#"><img src="~/Content/images/more.png" height="15" width="30" /></a></td>
                            <td></td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        <input id="withstatus" name="withstatus" value="@(ViewBag.withstatus)" type="hidden">
    </div>
</div>
<footer>
    <span class="col-xs-5"></span>
</footer>