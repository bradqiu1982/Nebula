
@{
    ViewBag.Title = "Reset Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/common.css" rel="stylesheet" />
<script src="~/Scripts/login.js" type="text/javascript"></script>

<script>
            $(function(){
                Login.init();
            })
</script>
<style type="text/css">
    .restpwd {
    margin-top:1%;
    margin-left:30%;
    }

    .restpwd-input{
    opacity: 1;
    border: #33CCFF 2px solid;
    width: 45%!important;
    height: 40px;
    font-size: 14px;
    border-radius: 6px;
    background-color: transparent;
    color: #fff;
    margin-left: 2%;
}

    .resetpwd-welcome{
    margin-top: 12%;
    margin-left: 25%;
    text-align: left;
    font-size: 45px;
    color: #fff;
    margin-bottom:3%;
}
</style>
<div id="login-body"></div>
<header>
    <span class="col-md-3 logo"></span>
</header>
<div class="content">
    <div class="container">
        <div class="resetpwd-welcome">
            Reset Your Password
        </div>
        <div>
            @if (ViewBag.UserName != null)
            {
                <div class="restpwd"><input class="restpwd-input" type="input" id="login_id" name="login_id" value="@ViewBag.UserName" readonly="readonly" /></div>
            }
            else
            {
                <div class="restpwd"><input class="restpwd-input" type="input" id="login_id" name="login_id" placeholder="Finisar Email" /></div>
            }
            
            <div class="restpwd"><input class="restpwd-input" type="input" id="new_pwd" name="new_pwd" placeholder="New Password" /></div>
            <div class="restpwd"><input class="restpwd-input" type="input" id="confirm_pwd" name="confirm_pwd" placeholder="Confirm Password" /></div>
            <div class="restpwd"><input class="login-btn" type="button" id="resetpwd-submit" name="resetpwd-submit" value="Confirm" /></div>
        </div>
    </div>
</div>