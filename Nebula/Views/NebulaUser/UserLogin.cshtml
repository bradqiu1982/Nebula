
@{
    ViewBag.Title = "User Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/common.css" rel="stylesheet" />
<script src="~/Scripts/login.js" type="text/javascript"></script>

<script>
            $(function(){
                Login.init();
            })
</script>

<div id="login-body"></div>
<header>
    <span class="col-md-3 logo"></span>
</header>
<div class="content">
    <div class="container">
        <div class="login-welcome">
            Welcome to BR System!
        </div>
        <div class="row login-form">
            <input class="login-input" type="input" id="login_id" name="login_id" placeholder="User Name" />
            <input class="login-input" type="input" id="login_pwd" name="login_pwd" placeholder="Password" />
            <input class="login-btn" type="button" id="btn-submit" name="btn-submit" value="LOG IN" />
            <a class="forget-pwd" href="#">Change password</a>
        </div>
    </div>
</div>


